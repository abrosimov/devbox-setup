{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pipeline_state.schema.json",
  "title": "Pipeline State",
  "description": "DEPRECATED: Superseded by progress spine (progress_plan.schema.json + progress_agent.schema.json). Kept for backward compatibility and migration via bin/progress migrate. Tracks full-cycle pipeline progress. Updated at each phase transition.",
  "type": "object",
  "required": ["pipeline_id", "feature_type", "stages", "current_gate"],
  "properties": {
    "pipeline_id": {
      "type": "string",
      "description": "Unique pipeline identifier: {JIRA_ISSUE}_{BRANCH_NAME}"
    },
    "feature_type": {
      "enum": ["ui", "backend", "fullstack", "pending_detection"],
      "description": "Detected or user-selected feature type. Determines which stages are applicable."
    },
    "stages": {
      "type": "object",
      "description": "Per-stage status tracking.",
      "properties": {
        "tpm":                         { "$ref": "#/$defs/stage" },
        "domain_expert":               { "$ref": "#/$defs/stage" },
        "domain_modeller":             { "$ref": "#/$defs/stage" },
        "designer":                    { "$ref": "#/$defs/stage_with_design" },
        "impl_planner":                { "$ref": "#/$defs/stage" },
        "database_designer":           { "$ref": "#/$defs/stage" },
        "api_designer":                { "$ref": "#/$defs/stage" },
        "software_engineer_backend":   { "$ref": "#/$defs/stage" },
        "software_engineer_frontend":  { "$ref": "#/$defs/stage" },
        "test_writer":                 { "$ref": "#/$defs/stage" },
        "code_reviewer":               { "$ref": "#/$defs/stage" },
        "observability_engineer":      { "$ref": "#/$defs/stage" }
      },
      "required": ["tpm", "domain_expert", "impl_planner", "software_engineer_backend", "test_writer", "code_reviewer"]
    },
    "current_gate": {
      "enum": ["none", "G1", "G2", "G3", "G4"],
      "description": "Which gate the pipeline is currently paused at. 'none' = running between gates."
    },
    "execution_dag_file": {
      "type": "string",
      "description": "Path to execution_dag.json when Phase 4 is active."
    },
    "decisions": {
      "type": "array",
      "items": { "$ref": "#/$defs/decision" }
    }
  },
  "$defs": {
    "stage_status": {
      "enum": ["pending", "in_progress", "completed", "skipped", "failed"]
    },
    "stage": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status":      { "$ref": "#/$defs/stage_status" },
        "output":      { "type": "string", "description": "Primary output file name." },
        "approved_at": { "type": ["string", "null"], "description": "ISO 8601 timestamp of gate approval, or null." },
        "error":       { "type": "string", "description": "Error description if status is 'failed'." },
        "attempt":     { "type": "integer", "minimum": 1 }
      }
    },
    "stage_with_design": {
      "allOf": [
        { "$ref": "#/$defs/stage" },
        {
          "properties": {
            "selected_option": { "type": ["string", "null"], "description": "Chosen design option name." },
            "figma_source": {
              "type": "object",
              "properties": {
                "url":      { "type": ["string", "null"] },
                "file_key": { "type": ["string", "null"] }
              }
            }
          }
        }
      ]
    },
    "decision": {
      "type": "object",
      "required": ["id", "gate", "stage", "question", "chosen", "decided_by", "timestamp"],
      "properties": {
        "id":                 { "type": "string" },
        "gate":               { "enum": ["G1", "G2", "G3", "G4"] },
        "stage":              { "type": "string" },
        "question":           { "type": "string" },
        "options_presented":  { "type": "array", "items": { "type": "string" } },
        "chosen":             { "type": "string" },
        "rationale":          { "type": "string" },
        "decided_by":         { "enum": ["user", "orchestrator"] },
        "timestamp":          { "type": "string" }
      }
    }
  }
}
