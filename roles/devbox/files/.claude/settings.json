{
  "permissions": {
    "allow": [
      "Bash(golangci-lint run)",
      "Bash(go test ./...)",
      "Bash(golangci-lint run ./...)"
    ],
    "deny": [
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/require-agent-approval.sh",
            "statusMessage": "Checking if implementation agent needs approval..."
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
