{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "progress_agent.schema.json",
  "title": "Progress Agent",
  "description": "Per-agent status tracking file. Each agent in the pipeline owns one of these (stored at {PROJECT_DIR}/progress/{agent_name}.json). Contains an append-only log of milestone/subtask updates.",
  "type": "object",
  "required": ["agent", "pipeline_id", "started_at", "updated_at", "status"],
  "properties": {
    "agent": {
      "type": "string",
      "description": "Agent name/identifier (e.g., 'software-engineer-go', 'technical-product-manager')."
    },
    "pipeline_id": {
      "type": "string",
      "description": "Must match the plan.json pipeline_id."
    },
    "started_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when agent started."
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update."
    },
    "status": {
      "enum": ["running", "completed", "blocked", "failed"],
      "description": "Current agent-level status."
    },
    "current_milestone": {
      "type": "string",
      "description": "ID of the milestone currently being worked on (e.g., 'M-WS-1')."
    },
    "current_subtask": {
      "type": "string",
      "description": "ID of the current subtask (e.g., 'M-WS-1.se')."
    },
    "updates": {
      "type": "array",
      "items": { "$ref": "#/$defs/update" },
      "description": "Append-only progress log."
    },
    "output_file": {
      "type": "string",
      "description": "Path to the agent's primary output file."
    },
    "git_sha": {
      "type": "string",
      "pattern": "^[a-f0-9]{7,40}$",
      "description": "HEAD SHA when agent completed."
    }
  },
  "$defs": {
    "update": {
      "type": "object",
      "required": ["milestone_id", "status", "timestamp"],
      "properties": {
        "milestone_id": {
          "type": "string",
          "description": "References a milestone ID from plan.json."
        },
        "subtask_id": {
          "type": ["string", "null"],
          "description": "References a subtask ID, or null."
        },
        "status": {
          "enum": ["started", "in_progress", "completed", "blocked", "failed"]
        },
        "summary": {
          "type": "string",
          "maxLength": 100,
          "description": "Brief description of what was done."
        },
        "files_touched": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Relative file paths modified in this update."
        },
        "error": {
          "type": "string",
          "description": "Error description if status is blocked/failed."
        },
        "timestamp": {
          "type": "string",
          "description": "ISO 8601 timestamp of this update."
        }
      }
    }
  }
}
