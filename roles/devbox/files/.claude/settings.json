{
  "env": {
    "UV_CACHE_DIR": "/tmp/claude/uv-cache",
    "RUFF_CACHE_DIR": "/tmp/claude/ruff-cache",
    "MYPY_CACHE_DIR": "/tmp/claude/mypy-cache",
    "GOCACHE": "/tmp/claude/go-build-cache",
