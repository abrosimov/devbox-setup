        "proxy.golang.org",
        "sum.golang.org",
        "*.pkg.dev",
        "crates.io",
        "*.crates.io",
        "dl.google.com",
        "storage.googleapis.com",

        "docs.python.org",
        "pkg.go.dev",
        "go.dev",
        "developer.mozilla.org",
        "docs.rs",
        "doc.rust-lang.org",
        "react.dev",
        "nextjs.org",
        "docs.docker.com",
        "kubernetes.io",
        "helm.sh",
        "docs.astral.sh",
        "vitejs.dev",
