{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "progress_plan.schema.json",
  "title": "Progress Plan",
  "description": "Milestone DAG that tracks progress across a development pipeline. Combines milestones, gates, and decisions into a single document for end-to-end visibility.",
  "type": "object",
  "required": ["pipeline_id", "feature_type", "created_at", "updated_at"],
  "properties": {
    "pipeline_id": {
      "type": "string",
      "description": "Unique pipeline identifier: {JIRA_ISSUE}_{BRANCH_NAME}"
    },
    "feature_type": {
      "enum": ["ui", "backend", "fullstack", "pending_detection"],
      "description": "Detected or user-selected feature type."
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of plan creation."
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of last modification."
    },
    "milestones": {
      "type": "array",
      "items": { "$ref": "#/$defs/milestone" }
    },
    "gates": {
      "type": "array",
      "items": { "$ref": "#/$defs/gate" }
    },
    "decisions": {
      "type": "array",
      "items": { "$ref": "#/$defs/decision" },
      "description": "All pipeline decisions in a single location (absorbed from decisions.json)."
    }
  },
  "$defs": {
    "milestone": {
      "type": "object",
      "required": ["id", "title", "phase", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^M-[a-z0-9-]+$",
          "description": "Milestone identifier (e.g., M-spec, M-domain, M-WS-1)."
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "phase": {
          "enum": ["discovery", "design", "planning", "implementation", "review", "delivery"]
        },
        "status": {
          "enum": ["pending", "in_progress", "completed", "skipped", "blocked"]
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Array of milestone IDs this milestone depends on."
        },
        "subtasks": {
          "type": "array",
          "items": { "$ref": "#/$defs/subtask" }
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "subtask": {
      "type": "object",
      "required": ["id", "title"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Subtask identifier (e.g., M-WS-1.se, M-WS-1.test, M-WS-1.review)."
        },
        "title": {
          "type": "string"
        },
        "agent_hint": {
          "type": "string",
          "description": "Agent subagent_type (e.g., 'software-engineer-go')."
        },
        "fr_ids": {
          "type": "array",
          "items": { "type": "string" },
          "description": "FR-xxx references linked to this subtask."
        },
        "status": {
          "enum": ["pending", "in_progress", "completed", "skipped", "blocked"]
        }
      }
    },
    "gate": {
      "type": "object",
      "required": ["id", "after_milestones", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^G[1-4]$"
        },
        "after_milestones": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Milestone IDs that must complete before this gate can be evaluated."
        },
        "status": {
          "enum": ["pending", "passed", "failed"]
        },
        "passed_at": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when the gate was passed, or null."
        }
      }
    },
    "decision": {
      "type": "object",
      "required": ["id", "gate", "question", "chosen", "decided_by", "timestamp"],
      "properties": {
        "id":                { "type": "string" },
        "gate":              { "enum": ["G1", "G2", "G3", "G4"] },
        "stage":             { "type": "string" },
        "question":          { "type": "string" },
        "options_presented": { "type": "array", "items": { "type": "string" } },
        "chosen":            { "type": "string" },
        "rationale":         { "type": "string" },
        "decided_by":        { "enum": ["user", "orchestrator"] },
        "timestamp":         { "type": "string" }
      }
    }
  }
}
