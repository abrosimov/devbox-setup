{
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Bash(golangci-lint run)",
      "Bash(go test ./...)",
      "Bash(golangci-lint run ./...)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run ruff format:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run black:*)",
      "Bash(uv run mypy:*)",
      "Bash(uvx ruff:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(pytest:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git blame:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git rev-parse:*)",
      "Bash(.claude/bin/safe-curl:*)",
      "Read(**)",
      "Read(~/.claude/**)",
      "Edit(**)",
      "Write(**)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git merge:*)",
      "Bash(git tag:*)",
      "Bash(git rm:*)",
      "Bash(git mv:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/require-agent-approval.sh",
            "statusMessage": "Checking if implementation agent needs approval..."
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-agent-code-edit.sh",
            "statusMessage": "Enforcing agent-based code editing..."
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-agent-code-write.sh",
            "statusMessage": "Enforcing agent-based code creation..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enforce-agent-code-bash.sh",
            "statusMessage": "Checking bash command for code file writes..."
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
